{
  "version": 3,
  "cmakeMinimumRequired": {
    "major": 3,
    "minor": 21,
    "patch": 0
  },
  "configurePresets": [
    {
      "name": "base-msvc-x64",
      "hidden": true,
      "environment": {
        "VSCMD_ARG_TGT_ARCH": "x64"
      }
    },
    {
      "name": "base-clang-cl-x64",
      "hidden": true,
      "environment": {
        "VSCMD_ARG_TGT_ARCH": "x64",
        "CC": "clang-cl",
        "CXX": "clang-cl"
      }
    },
    {
      "name": "x64-MSVC-Debug",
      "generator": "Ninja",
      "inherits": [ "base-msvc-x64" ],
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Debug",
        "CMAKE_EXPORT_COMPILE_COMMANDS": "ON"
      },
      "binaryDir": "${sourceDir}/out/build/${presetName}",
      "installDir": "${sourceDir}/out/install/${presetName}"
    },
    {
      "name": "x64-MSVC-Release",
      "generator": "Ninja",
